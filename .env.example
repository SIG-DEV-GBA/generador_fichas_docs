# ============================================
# CONFIGURACIÓN DE APIs
# ============================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.3

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.3

# Modelo por defecto (openai | anthropic)
DEFAULT_LLM_PROVIDER=anthropic

# ============================================
# BASE DE DATOS VECTORIAL (ChromaDB)
# ============================================

CHROMA_PERSIST_DIRECTORY=./data/vector_db
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=fichas_ayudas_sociales

# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================

# Entorno (development | production)
ENVIRONMENT=development

# Debug mode
DEBUG=True

# Nivel de logging (DEBUG | INFO | WARNING | ERROR)
LOG_LEVEL=INFO

# Puerto del servidor
PORT=8000

# Host
HOST=0.0.0.0

# Workers (para producción con Gunicorn)
WORKERS=4

# ============================================
# PROCESAMIENTO DE ARCHIVOS
# ============================================

# Tamaño máximo de PDF (en MB)
MAX_PDF_SIZE_MB=10

# Timeout de procesamiento (en segundos)
PROCESSING_TIMEOUT=60

# Directorio temporal para archivos
TEMP_DIR=./data/temp

# Directorio de salida
OUTPUT_DIR=./data/output

# ============================================
# RAG SYSTEM
# ============================================

# Usar RAG por defecto
USE_RAG=True

# Número de ejemplos a recuperar
RAG_TOP_K=3

# Modelo de embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# RATE LIMITING Y SEGURIDAD
# ============================================

# Límite de requests por minuto
RATE_LIMIT_PER_MINUTE=10

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Secret key para JWT (si se implementa autenticación)
SECRET_KEY=your-secret-key-change-in-production

# ============================================
# CACHÉ
# ============================================

# Usar caché
USE_CACHE=True

# Redis (si se implementa)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# MONITOREO Y TELEMETRÍA
# ============================================

# Sentry DSN (para tracking de errores)
SENTRY_DSN=

# Habilitar métricas de Prometheus
ENABLE_METRICS=True

# ============================================
# FEATURES FLAGS
# ============================================

# Habilitar procesamiento batch
ENABLE_BATCH_PROCESSING=True

# Habilitar descarga de fichas
ENABLE_DOWNLOAD=True

# Habilitar análisis de calidad automático
ENABLE_QUALITY_CHECK=True

# Habilitar modo streaming de LLM
ENABLE_STREAMING=False
